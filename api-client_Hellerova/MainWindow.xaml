<Window x:Class="api_client_Hellerova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:api_client_Hellerova"
         xmlns:vm="clr-namespace:api_client_Hellerova.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="Films">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding nazev}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="Zanrs">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding nazev}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Reload" Command="{Binding ReloadCommand}"/>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding Response}" TextWrapping="Wrap" />
            <ListBox ItemsSource="{Binding Filmy}" Grid.Column="1" ItemTemplate="{StaticResource Films}"/>
            <ListBox ItemsSource="{Binding Zanry}" Grid.Column="3" ItemTemplate="{StaticResource Zanrs}"/>
        </Grid>
    </DockPanel>
</Window>