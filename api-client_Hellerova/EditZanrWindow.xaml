<Window x:Class="api_client_Hellerova.EditZanrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:api_client_Hellerova"
        mc:Ignorable="d"
        Title="EditZanrWindow" Height="350" Width="330">
    <Grid>
        <StackPanel Background=" #e2cfc4" Orientation="Vertical" >
            <Label FontSize="20" HorizontalAlignment="Center" FontWeight="Bold">Edit Zanr</Label>
            <Label Margin="10">Name</Label>
            <TextBox Margin="10, 0, 50, 20" Text="{Binding EditedZanr.name}"/>
            <Button Click="Button_Click_1" Command="{Binding SaveChanges2Command}" Background="#ccd5ae" Margin="10, 0, 50, 20">Save changes</Button>
            <Button Click="Button_Click" Background="#ffdab9" Margin="10, 0, 50, 20">Storno</Button>
        </StackPanel>
    </Grid>
</Window>
